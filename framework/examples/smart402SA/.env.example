# Smart402 Scalable Architecture - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Server Configuration
# ============================================================================
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# ============================================================================
# Database - PostgreSQL
# ============================================================================
POSTGRES_URL=postgresql://smart402:smart402_dev_password@postgres:5432/smart402sa
POSTGRES_POOL_SIZE=20

# ============================================================================
# Database - MongoDB
# ============================================================================
MONGODB_URL=mongodb://smart402:smart402_dev_password@mongodb:27017/smart402sa

# ============================================================================
# Cache - Redis
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_TTL=3600

# ============================================================================
# Search - Elasticsearch
# ============================================================================
ELASTICSEARCH_URL=http://elasticsearch:9200
ES_INDEX_PREFIX=smart402sa

# ============================================================================
# Blockchain Configuration
# ============================================================================
# For DEMO mode: Leave PRIVATE_KEY empty
# For PRODUCTION mode: Add your wallet private key
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
PRIVATE_KEY=
CHAIN_ID=80001

# ============================================================================
# Security - JWT
# ============================================================================
JWT_SECRET=smart402-dev-secret-change-in-production
JWT_EXPIRES_IN=24h

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1 minute

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGIN=*
CORS_CREDENTIALS=false

# ============================================================================
# Smart402 Configuration
# ============================================================================
AEO_TARGET_SCORE=0.85
LLMO_OPTIMIZATION_LEVEL=high

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=info

# ============================================================================
# Monitoring
# ============================================================================
MONITORING_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================================================
# Frontend Configuration (for Vite)
# ============================================================================
VITE_API_URL=http://localhost:4000
VITE_GRAPHQL_URL=http://localhost:4002/graphql
VITE_WS_URL=ws://localhost:4003
