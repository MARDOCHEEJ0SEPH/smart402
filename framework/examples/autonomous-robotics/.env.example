# Smart402 Autonomous Robotics Platform Configuration

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/smart402-robotics
MONGODB_DATABASE=smart402-robotics

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Blockchain Configuration (Polygon)
BLOCKCHAIN_NETWORK=polygon-mumbai
BLOCKCHAIN_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_MAINNET_RPC=https://polygon-rpc.com
PRIVATE_KEY=your_private_key_here

# Smart Contract Addresses (will be populated after deployment)
ROBOT_SERVICE_CONTRACT=
PAYMENT_CONTRACT=
ESCROW_CONTRACT=

# Chainlink Configuration
CHAINLINK_NODE_URL=https://chainlink-mumbai.api.com
CHAINLINK_API_KEY=your_chainlink_api_key
CHAINLINK_JOB_ID=your_job_id

# Smart402 Configuration
SMART402_API_KEY=your_smart402_api_key
SMART402_X402_ENDPOINT=https://x402.smart402.io
AEO_TARGET_SCORE=0.85
LLMO_OPTIMIZATION_LEVEL=high

# Neural Core Configuration
NEURAL_CORE_ENABLED=true
EVOLUTION_ENGINE_ENABLED=true
SELF_HEALING_ENABLED=true
LEARNING_RATE=0.01
EVOLUTION_FREQUENCY=3600000

# WebSocket Configuration
WS_PORT=3001
WS_PING_INTERVAL=30000
WS_MAX_CLIENTS=1000

# API Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=24h
API_RATE_LIMIT=100
BCRYPT_ROUNDS=10

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
SENTRY_DSN=

# Payment Configuration
PAYMENT_TOKEN=USDC
USDC_CONTRACT_ADDRESS=0x0FA8781a83E46826621b3BC094Ea2A0212e71B23
DEFAULT_GAS_LIMIT=300000
GAS_PRICE_MULTIPLIER=1.2

# Robot Fleet Configuration
MAX_ROBOTS_PER_FACILITY=100
TELEMETRY_UPDATE_INTERVAL=5000
MAINTENANCE_CHECK_INTERVAL=86400000

# Content Generation
CONTENT_GENERATION_ENABLED=true
AUTO_PAGE_CREATION=true
SEO_OPTIMIZATION=true

# Scaling Configuration
AUTO_SCALE_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
NOTIFICATION_EMAIL=admin@robotics-platform.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# Feature Flags
ENABLE_BLOCKCHAIN_PAYMENTS=true
ENABLE_CHAINLINK_ORACLES=true
ENABLE_NEURAL_EVOLUTION=true
ENABLE_AUTO_SCALING=true
ENABLE_SELF_HEALING=true
